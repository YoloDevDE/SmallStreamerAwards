<script src="js/jquery.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/custom.js"></script>
<script src="js/jquery.sticky.js"></script>
<script src="js/wow.min.js"></script>
<script src="js/owl.carousel.min.js"></script>
<script src="js/ekko-lightbox-min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>
<script async src="https://www.googletagmanager.com/gtag/js?id=G-G8REJXR93X"></script>

<script type="text/javascript">
    // jQuery DOM Ready
    $(document).ready(function () {
        // Initialize WOW.js
        new WOW().init();

        // Open the login popup when clicking the login button
        document.getElementById('openLoginPopup').addEventListener('click', function () {
            document.getElementById('loginPopup').style.display = 'block';
        });

        // Close the login popup when clicking on the close button
        document.getElementById('closeLogin').addEventListener('click', function () {
            document.getElementById('loginPopup').style.display = 'none';
        });

        // Close the popup when clicking outside the content
        window.addEventListener('click', function (event) {
            const modal = document.getElementById('loginPopup');
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        });

        // Lightbox functionality
        $(document).on('click', '*[data-toggle="lightbox"]', function (event) {
            event.preventDefault();
            $(this).ekkoLightbox();
        });

        // Handle Impressum opening and closing
        $('#openImpressum').on('click', function () {
            $('#impressumContainer').fadeIn(); // Smooth opening
        });

        $('#closeImpressum').on('click', function () {
            console.log("Schließen-Button wurde geklickt"); // Debugging log
            $('#impressumContainer').fadeOut(); // Smooth closing
        });

        // Close Impressum when clicking outside the container
        $(window).on('click', function (event) {
            if ($(event.target).is('#impressumContainer')) {
                $('#impressumContainer').fadeOut();
            }
        });

        // Handle user login state and greeting
        const $userInfo = $('#user-info');
        const $loginButton = $('#openLoginPopup');
        const $usernameElement = $('#username');

        // Fetch user data from the backend (API)
        $.get('/api/user', function (response) {
            const user = response.user;

            // Check if the user is logged in
            if (user && user.username) {
                // Show user info and set username
                $userInfo.show();
                $usernameElement.text(`Hallo ${user.username}`);
                $loginButton.hide(); // Hide login button if user is logged in
            } else {
                // Show login button
                $loginButton.show();
                $userInfo.hide(); // Hide user info if not logged in
            }
        });

        // Countdown Timer
        const countdownDate = new Date("Oct 14, 2024 20:00:00").getTime();
        const countdownFunction = setInterval(function () {
            const now = new Date().getTime();
            const timeLeft = countdownDate - now;

            const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
            const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

            $('#days').text(days);
            $('#hours').text(hours);
            $('#minutes').text(minutes);
            $('#seconds').text(seconds);

            if (timeLeft < 0) {
                clearInterval(countdownFunction);
                $('#timer').text("Es geht in wenigen Momenten weiter");
            }
        }, 1000);

        // Function to start confetti from a specific element
        function startConfettiFromElement($element) {
            const rect = $element[0].getBoundingClientRect(); // Get position of the element

            const x = (rect.left + rect.width / 2) / window.innerWidth;  // X-Position relative to viewport
            const y = (rect.top + rect.height / 2) / window.innerHeight; // Y-Position relative to viewport

            // Start confetti from this position
            confetti({
                particleCount: 10,
                spread: 30,
                startVelocity: 20,
                gravity: 1,
                origin: { x: x, y: y },
                colors: ['#FFD700'],
                shapes: ['square']
            });
        }

        // Confetti on mouseover on the element with ID 'confetti-trigger'
        $('#confetti-trigger').on('mouseover', function () {
            startConfettiFromElement($(this));
        });

        // Confetti on click on the element with ID 'confetti-trigger'
        $('#confetti-trigger').on('click', function () {
            confetti({
                particleCount: 100,
                spread: 70,
                origin: { y: 0.6 }
            });
        });
    });

    // Google Tag (gtag.js)
    window.dataLayer = window.dataLayer || [];

    function gtag() {
        dataLayer.push(arguments);
    }

    gtag('js', new Date());
    gtag('config', 'G-G8REJXR93X');
</script>
<script>
    // Check if a "login" query parameter exists
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('login') === 'success') {
        alert('Login successful! Welcome back!');
    }
</script>

